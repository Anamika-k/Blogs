<div class="container py-5">
  <h1 class="display-4 text-center mb-5"><%= @category.name %> Posts</h1> <!-- Category name -->

  <div class="row">
    <% @category.posts.each do |post| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-lg border-light">
          <!-- Display image if attached -->
          <% if post.images.attached? %>
            <%= image_tag post.images.first.variant(resize_to_limit: [500, 500]).processed, class: 'card-img-top img-fluid', alt: post.title %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post_path(post), class: 'text-decoration-none text-dark' %></h5>
            <p class="card-text"><%= truncate(post.description.to_plain_text, length: 100) %></p>
            <%= link_to 'Read More', post_path(post), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
