<!-- app/views/categories/show.html.erb -->

<div class="container">
  <h1 class="display-4 text-center"><%= @category.name %> Posts</h1> <!-- Category name -->

  <div class="row">
    <% @category.posts.each do |post| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
            <p class="card-text"><%= truncate(post.description.body.to_s, length: 100) %></p>
            <%= link_to 'Read More', post_path(post), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
